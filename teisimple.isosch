      </report>
      </rule>
   </pattern>
   <pattern id="teisimple-div-constraint-abstractModel-structure-p-23">
      <rule context="tei:div">
         <report test="ancestor::tei:p or ancestor::tei:ab and not(ancestor::tei:floatingText)">
