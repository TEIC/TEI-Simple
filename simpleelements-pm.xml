      <model predicate="parent::div[not(@type)]"
	     behaviour="makeHeader(.)">
      <desc>@Type on a parent div should carry the information about what kind of header is this and 
      </desc>
      </model>
      <model predicate="parent::div[@type]" behaviour="makeHeader(.,
						       @type)">
      <desc>Pithy description. </desc>
      </model>
      <model predicate="parent::lg" behaviour="makeHeader(.,
					       'verse')">
      <desc>Pithy description. </desc>
      </model>
      <model predicate="parent::list" behaviour="makeHeader(.,
						 'list')">
      <desc>Pithy description. </desc>
      </model>
      <model behaviour="makeHeader(.)">
      <desc>Pithy description. </desc>
      </model>
   </elementSpec>
   <elementSpec mode="change" ident="hi">
      <model predicate="@rendition" behaviour="makeInline(.)"
	     class="italic">
      <desc>Pithy description. </desc>
      </model>
      <model predicate="not(@rendition)" behaviour="makeInline(.)"
	     class="italic">
      <desc>Pithy description. </desc>
      </model>
   </elementSpec>
   <elementSpec mode="change" ident="imprimatur"/>
   <elementSpec mode="change" ident="item">
      <model predicate="parent::list[@rendition]"
	     behaviour="makeListItem(., parent::list[@rendition])">
      <desc>Pithy description. </desc>
      </model>
      <model predicate="not(parent::list[@rendition])"
	     behaviour="makeListItem(., 'simple:bulleted')">
      <desc>Pithy description. </desc>
      </model>

   </elementSpec>
