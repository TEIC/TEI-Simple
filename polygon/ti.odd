                  class="chapterHeader"/>

               <!-- part headings -->
               <process xpath="parent::div[not(@type)]" name="makeHeader(.)" mode="render"
                  class="partHeader"/>

               <!-- verse headings -->
               <process xpath="parent::lg" name="makeHeader(.)" mode="render" class="verseHeader"/>
            </elementSpec>

            <elementSpec ident="lg" mode="change">
               <attList>
