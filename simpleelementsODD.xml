      <elementSpec mode="change" ident="head">
            <desc>@Type on a parent div should carry the information about what kind of header is
                  this and makeHeader() should use it to determine how to behave</desc>
            <process context="parent::div[not(@type)]" name="makeHeader(.)" mode="render"/>
            <process context="parent::div[@type]" name="makeHeader(., @type)" mode="render"/>
            <process context="parent::lg" name="makeHeader(., 'verse')" mode="render"/>
            <process context="parent::list" name="makeHeader(., 'list')" mode="render"/>
            <process context="" name="makeHeader(.)" mode="render"/>
      </elementSpec>
      <elementSpec mode="change" ident="hi">
            <process context="@rendition" name="makeInline(.)" mode="render" class="italic"/>
            <process context="not(@rendition)" name="makeInline(.)" mode="render" class="italic"/>
      </elementSpec>
      <elementSpec mode="change" ident="imprimatur"/>
      <elementSpec mode="change" ident="item">
            <process context="parent::list[@rendition]" name="makeListItem(., parent::list[@rendition])" mode="render"/>
            <process context="not(parent::list[@rendition])" name="makeListItem(., 'simple:bulleted')" mode="render"/>
            
      </elementSpec>
      <elementSpec mode="change" ident="l"/>
