            <ruleDef predicate="@rendition" behaviour="makeList(., @rendition)" output="default"/>
            <process context="not(@rendition)" name="makeList(., 'simple:bulleted')" mode="render"/>
<!--
                  we are thinking! customization a user might make
                  <process context="@type='blah'" name="makeList(., 'simple:bulleted')" mode="render" class="blahList"/>
-->            
